@{
    ViewData["Title"] = "Home Page";
}
@using TaskThree.Models;
@model PizzaModel;


<img class="card-img" src="@Model.Image">
<h4 class="card-name">@Model.Name</h4>
<div class="card-ingredients"> @Model.Ingredients </div>
<div class="card-footer">
    <div class="card-price">@Model.Price &#8381;</div>
    <div class="card-weight">@Model.Weight гр.</div>
    <a href="#" class="button-link">В корзину</a>
</div>
<form method="post">
    <input  asp-for="Id"/>
            <label asp-for="Name">Название:</label>
            <input asp-for="Name"/>
            <label asp-for="Image">Путь к изображению:</label>
            <input asp-for="Image" />

            <label asp-for="Ingredients">Ингредиенты:</label>
            <input asp-for="Ingredients" />

            <label asp-for="Price">Цена:</label>
            <input asp-for="Price" />

            <label asp-for="Weight">Вес:</label>
            <input asp-for="Weight" />
            <br>
            
        
        <button class="button-link" type="submit">Сохранить</button>
    </form>
    
